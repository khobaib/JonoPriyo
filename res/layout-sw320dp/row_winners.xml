<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <ImageView
        android:id="@+id/iv_winner_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/image_back"
        android:padding="4dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_poll_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_winner_pic"
        android:layout_alignTop="@+id/iv_winner_pic"
        android:background="@drawable/badge_poll_number"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="3dp"
        android:text="112"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_poll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_winner_pic"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/iv_winner_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="Who will win the champions trophy?"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_poll"
        android:layout_below="@+id/tv_poll"
        android:text="Winner:"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_winner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_winner"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_winner"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Khobaib"
        android:textColor="@color/red"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_winner_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_winner"
        android:layout_below="@+id/tv_winner"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Gulshan, Dhaka, Bangladesh"
        android:textColor="@color/black"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/tv_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_poll"
        android:layout_below="@+id/tv_winner_address"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="12000"
        android:textColor="@color/red"
        android:textSize="13dp"
        android:textStyle="bold" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_prize_title"
        android:layout_marginTop="7dp" />

</RelativeLayout>