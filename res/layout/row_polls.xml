<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_poll_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_poll_pic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_back" />

    <TextView
        android:id="@+id/tv_poll_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_poll_pic"
        android:layout_alignTop="@+id/iv_poll_pic"
        android:layout_marginRight="3dp"
        android:background="@drawable/badge_poll_number"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:text="112"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_participation_count"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/star3"
        android:gravity="center"
        android:text="1122"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_poll_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_poll_number"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/tv_participation_count"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="Champions Trophy"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_participation_count"
        android:layout_toRightOf="@+id/iv_poll_pic"
        android:text="Category:"
        android:textColor="@color/red"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_category_title"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_category_title"
        android:text="Sports"
        android:textColor="@color/gray70"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_release_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_category_title"
        android:layout_toRightOf="@+id/iv_poll_pic"
        android:text="Released:"
        android:textColor="@color/red"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_release_date_title"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_release_date_title"
        android:text="2013-06-22"
        android:textColor="@color/gray70"
        android:textStyle="bold"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/ll_prize"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_category_title"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_prize"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dollar_sign"/>

        <TextView
            android:id="@+id/tv_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="91328"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:rotation="-20"
            android:textStyle="bold" />
    </RelativeLayout>
    
<!--         <View
            android:id="@+id/view_cast_by_me"
            android:layout_width="8dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@color/red"/> -->

    <TextView
        android:id="@+id/tv_voted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="50dp"
        android:textStyle="bold"
        android:rotation="-20"
        android:textColor="@color/cast_poll_back"
        android:text="Voted" />

</RelativeLayout>